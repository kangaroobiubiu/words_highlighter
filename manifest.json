{
  "manifest_version": 3,
  "name": "Multi-list Highlighter",
  "version": "1.0",
  "description": "支持多个列表，高亮网页文本",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/abc.png",
      "48": "icons/abc.png",
      "128": "icons/abc.png"
    }
    },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
